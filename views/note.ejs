<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head")%>
    <link rel="stylesheet" href="../css/notes.css">
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel='stylesheet prefetch' href='http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css'>

    <title>RudeTrader</title>
    
    <style></style>
  </head>

  <body>
    

    <!-- this is taskbar which includes logo, dashboard,chalander -->
    <%- include("partials/taskbar")%>
    
    <!-- add trade button -->
    <%- include("partials/add-trade")%>

    <!--main web page -->
    <div class="main" id="main">
      <div class="main-header">
        <div class="page-name">Note </div>
        <div class="color-addtrade-button">
          <button class="header-button" id="add-trade-button">Add Trade</button>
        </div>
        
        <!-- profile dropdown-menu -->
        <%- include("partials/profile-dropdown-menu")%>
      </div>

      <!--main contant-->
      <div class="main-contant">

        <form action="/add_note" method="post" >
          <textarea  name="note_add" type="text" id="name" readonly><%= Note %></textarea>
          <div >

            <button type="button" onclick="enableInput()" >Edit</button>
            <button type="submit" >Save</button>
          </div>
        </form> 

      </div>
      <!--main contant ends -->
    </div>
    <!--main webpage ends-->
    <script>
      function enableInput() {
        const nameInput = document.getElementById('name');
        nameInput.readOnly = false;
        nameInput.focus();
      }
    </script>

    <script src="../js/layout.js">
      


    </script>
    
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="../js/calender.js"></script>
  </body>
</html>
